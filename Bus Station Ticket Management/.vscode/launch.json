{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (Watch + Hot Reload)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "tasks": [
        "dotnet: clean",
        "dotnet: restore",
        "dotnet: build"
      ],
      "program": "${workspaceFolder}/bin/Debug/net9.0/Bus Station Ticket Management.dll",
      "args": [
        "watch",
        "run"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "hotReloadEnabled": true,
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false // Only debug in a file
    },
    {
      "name": "Attach to .NET Core",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
