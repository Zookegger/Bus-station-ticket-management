@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Bus_Station_Ticket_Management.Models.Trip>

<div class="row mt-3">
    <div class="col-12 text-center">
        <h1 class="display-4">Đặt vé xe online</h1>
        <p class="lead">Tìm và đặt vé xe nhanh chóng, dễ dàng!</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="SearchTrips" method="post" class="row g-2">
            <div class="col-12 col-md-3">
                <input type="text" name="departure" class="form-control" placeholder="Điểm đi" required />
            </div>
            <div class="col-12 col-md-3">
                <input type="text" name="destination" class="form-control" placeholder="Điểm đến" required />
            </div>
            <div class="col-12 col-md-3">
                <input type="date" name="departureTime" class="form-control" required />
            </div>
            <div class="col-12 col-md-3">
                <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
            </div>
        </form>
    </div>
</div>

<hr class="divider my-4">

<div class="row">
    <div class="col-12">
        <h2>Chuyến xe phổ biến</h2>
        @if (Model.Any(t => t.Status == "Stand By"))
        {
            @foreach (var trip in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"> @(trip.Route != null ? (trip.Route.StartLocation?.Name + " - " +
                                                trip.Route.DestinationLocation?.Name) : "No Route").</h5>
                <p class="card-text">
                    Khởi hành: @trip.DepartureTime.ToString("dd/MM/yyyy HH:mm")
                    Giờ đến: @trip.ArrivalTime.ToString("dd/MM/yyyy HH:mm")
                    | Giá:
                    @trip.TotalPrice.ToString("N0") VNĐ
                </p>
                <a asp-area="" asp-controller="Seat" asp-action="SelectSeats" asp-route-vehicleId="@trip.VehicleId"
                    asp-route-tripId="@trip.Id" class="btn btn-success">Chọn ghế</a>
            </div>
        </div>
                }
        }
        else
        {
            <p>Chưa có chuyến xe nào.</p>
        }
    </div>
</div>
