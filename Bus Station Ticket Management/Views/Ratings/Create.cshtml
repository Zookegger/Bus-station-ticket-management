@model Bus_Station_Ticket_Management.Models.Rating

@{
    ViewData["Title"] = "Đánh giá chuyến đi";
}

<h2>Đánh giá chuyến đi</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TripId" class="control-label"></label>
        <select asp-for="TripId" class="form-control" asp-items="ViewBag.TripList">
        </select>
        <span asp-validation-for="TripId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TripRating" class="control-label"></label>
        <input asp-for="TripRating" class="form-control" min="1" max="10" />
        <span asp-validation-for="TripRating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Gửi đánh giá cho chúng mình nha</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
