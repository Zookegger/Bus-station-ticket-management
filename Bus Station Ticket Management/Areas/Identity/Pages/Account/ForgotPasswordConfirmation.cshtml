@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container py-5">
    <div class="card shadow mx-auto rounded-4 border-0" style="max-width: 500px;">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        </div>

        <div class="card-body p-4">
            <div class="text-center mb-4">
                <i class="bi bi-envelope-check-fill text-success" style="font-size: 3rem;"></i>
                <h2 class="h4 mt-3">Email Sent!</h2>
                <p class="text-muted">Please check your email inbox for instructions to reset your password.</p>
                <p class="small text-muted mt-3">If you don't see the email, please check your spam folder.</p>
            </div>
            
            <div class="d-grid gap-2 mt-4">
                <a role="button" class="btn btn-primary rounded-pill hvr-icon-back" asp-page="./Login">
                    <i class="fa-solid fa-arrow-left me-2 hvr-icon"></i>Return to Login
                </a>
            </div>
        </div>
    </div>
</div>
