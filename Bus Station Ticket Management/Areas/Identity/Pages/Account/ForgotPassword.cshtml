@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="card shadow mx-auto mt-md-5 rounded-4" style="max-width: 600px;">
    <div class="card-header bg-success-subtle">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="card-body">
        <h2 class="card-title mt-2">Enter your email</h2>
        <form class="" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                    placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="btn-group flex-column w-100 gap-2 mt-4">
                <button type="submit" class="btn btn-primary rounded-pill">Reset Password</button>
                <a role="button" class="btn btn-outline-secondary rounded-pill" asp-page="./Login">
                    <span>Return to Login</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
