@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<style>
    .nav-link .fa {
        width: 25px;
        text-align: center;
        font-size: 1.5rem;
        line-height: 1;
    }

    .nav-link span {
        line-height: 1;
    }
</style>

<ul class="nav nav-pills flex-column gap-2"
    style="--bs-nav-link-color: #686a6b; --bs-nav-link-hover-color: #000000;">
    
    <li class="nav-item mt-1">
        <a class="nav-link d-flex align-items-center gap-3 @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
            <i class="fa fa-user"></i> <span>Profile</span>
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link d-flex align-items-center gap-3 @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
            <i class="fa fa-envelope"></i> <span>Email</span>
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link d-flex align-items-center gap-3 @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
            <i class="fa fa-lock"></i> <span>Password</span>
        </a>
    </li>

    @if (hasExternalLogins)
    {
        <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-3 @ManageNavPages.ExternalLoginsNavClass(ViewContext)" id="external-login" asp-page="./ExternalLogins">
                <i class="fa fa-globe"></i> <span>External Logins</span>
            </a>
        </li>
    }

    <li class="nav-item">
        <a class="nav-link d-flex align-items-center gap-3 @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
            <i class="fa fa-id-card"></i> <span>Personal Data</span>
        </a>
    </li>
</ul>
