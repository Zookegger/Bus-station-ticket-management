@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="card shadow-sm mb-4">
    <label class="card-header h5 fw-semibold bg-success bg-gradient text-white">@ViewData["Title"]</label>

    <div class="card-body">
        <p class="mb-3">
            Your account contains personal data you have provided. You can choose to download or permanently delete this data.
        </p>
        <div class="alert alert-danger">
            <strong>Warning:</strong> Deleting your data will permanently remove your account. This action cannot be undone.
        </div>

        <div class="d-flex gap-2 mt-4">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fa fa-download me-1"></i>Download Data
                </button>
            </form>

            <a id="delete" asp-page="DeletePersonalData" class="btn btn-outline-danger">
                <i class="fa fa-trash me-1"></i>Delete Account
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
