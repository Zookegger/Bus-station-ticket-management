@model Bus_Station_Ticket_Management.Models.VehicleType

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container pb-3">
    <h1 class="text-danger fw-bold mb-4">Delete Vehicle Type</h1>

    <h3 class="mb-3">Are you sure you want to delete this?</h3>

    <div class="card shadow-sm">
        <h4 class="card-header">Vehicle Type</h4>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-3">Total Seats</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.TotalSeats)</dd>

                <dt class="col-sm-3">Total Flooring</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.TotalFlooring)</dd>
                

                <dt class="col-sm-3">Total Row</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.TotalRow)</dd>

                <dt class="col-sm-3">Total Column</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.TotalColumn)</dd>
            </dl>

        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between mt-3">
            <a role="button" class="btn btn-outline-secondary" asp-action="Index">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
        </div>
    </form>
</div>
