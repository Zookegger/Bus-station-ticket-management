@model Bus_Station_Ticket_Management.Models.VehicleType

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="display-4 text-center">Edit Vehicle Type</h1>

<h4 class="text-muted text-center">Modify vehicle details below</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <!-- Name Input -->
            <div class="form-group">
                <label asp-for="Name" class="form-label">Vehicle Type Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter vehicle name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <!-- Price Input -->
            <div class="form-group">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" placeholder="Enter price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <!-- Total Seats Input -->
            <div class="form-group">
                <label asp-for="TotalSeats" class="form-label">Total Seats</label>
                <input asp-for="TotalSeats" class="form-control" placeholder="Enter total seats" />
                <span asp-validation-for="TotalSeats" class="text-danger"></span>
            </div>
            
            <!-- Total Flooring Input -->
            <div class="form-group">
                <label asp-for="TotalFloors" class="form-label">Total Flooring</label>
                <input asp-for="TotalFloors" class="form-control" placeholder="Enter total flooring" />
                <span asp-validation-for="TotalFloors" class="text-danger"></span>
            </div>
            
            <!-- Total Row Input -->
            <div class="form-group">
                <label asp-for="TotalRows" class="form-label">Total Rows</label>
                <input asp-for="TotalRows" class="form-control" placeholder="Enter total rows" />
                <span asp-validation-for="TotalRows" class="text-danger"></span>
            </div>
            
            <!-- Total Column Input -->
            <div class="form-group">
                <label asp-for="TotalColumns" class="form-label">Total Columns</label>
                <input asp-for="TotalColumns" class="form-control" placeholder="Enter total columns" />
                <span asp-validation-for="TotalColumns" class="text-danger"></span>
            </div>
            
            <!-- Submit and Back Buttons -->
            <div class="form-group d-flex justify-content-between mt-3">
                <a asp-action="Index" role="button" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
