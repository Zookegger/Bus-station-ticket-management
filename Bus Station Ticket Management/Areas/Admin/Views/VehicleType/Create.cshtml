@model Bus_Station_Ticket_Management.Models.VehicleType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1 class="text-success fw-bold mb-4">Create Vehicle</h1>
    <h4 class="mb-3">Vehicle Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-9 col-lg-12 mx-auto">
            <form asp-action="Create" class="bg-light p-4 rounded shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3">
                    Please correct the errors below.
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control"
                        placeholder="Enter vehicle type name (e.g., Electric Bus)" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" placeholder="Enter base fare (e.g., 100000)" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TotalSeats" class="form-label">Total Seats</label>
                    <input asp-for="TotalSeats" class="form-control" placeholder="Enter total seats (e.g., 42)" />
                    <span asp-validation-for="TotalSeats" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TotalFloors" class="form-label">Total Flooring</label>
                    <input asp-for="TotalFloors" class="form-control" placeholder="Enter total flooring (e.g., 3)" />
                    <span asp-validation-for="TotalFloors" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TotalRows" class="form-label">Total Rows</label>
                    <input asp-for="TotalRows" class="form-control" placeholder="Enter number of rows (e.g., 7)" />
                    <span asp-validation-for="TotalRows" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TotalColumns" class="form-label">Total Columns</label>
                    <input asp-for="TotalColumns" class="form-control" placeholder="Enter number of columns (e.g., 6)" />
                    <span asp-validation-for="TotalColumns" class="text-danger"></span>
                </div>

                <div class="form-group btn-group gap-2 mt-3 w-100">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Create
                    </button>
                    <a role="button" class="btn btn-outline-secondary" asp-action="Index">
                        <i class="fa fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
