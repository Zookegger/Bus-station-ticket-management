@model Bus_Station_Ticket_Management.Models.VehicleType

@{
    ViewData["Title"] = "Create Vehicle Type";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="text-primary fw-bold mb-3">
                        <i class="fas fa-plus-circle me-2"></i> Add New Vehicle Type
                    </h2>
                    <p class="text-muted mb-4">Fill in the details for the new vehicle type below.</p>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger">
                            Please correct the errors below.
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Electric Bus" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Price</label>
                            <input asp-for="Price" class="form-control" placeholder="e.g., 100000" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="TotalSeats" class="form-label">Seats</label>
                                <input asp-for="TotalSeats" class="form-control" placeholder="e.g., 42" />
                                <span asp-validation-for="TotalSeats" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="TotalFloors" class="form-label">Floors</label>
                                <input asp-for="TotalFloors" class="form-control" placeholder="e.g., 3" />
                                <span asp-validation-for="TotalFloors" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="TotalRows" class="form-label">Rows</label>
                                <input asp-for="TotalRows" class="form-control" placeholder="e.g., 7" />
                                <span asp-validation-for="TotalRows" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TotalColumns" class="form-label">Columns</label>
                            <input asp-for="TotalColumns" class="form-control" placeholder="e.g., 6" />
                            <span asp-validation-for="TotalColumns" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
