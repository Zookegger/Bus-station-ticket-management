@model Bus_Station_Ticket_Management.Models.VehicleType

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1 class="text-success fw-bold mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <h4 class="card-header text-center">@Html.DisplayFor(model => model.Name)</h4>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-4">Total Seats</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalSeats)</dd>

                <dt class="col-sm-4">Total Columns</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalColumns)</dd>

                <dt class="col-sm-4">Total Rows</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.RowsPerFloor.Sum())</dd>

                <dt class="col-sm-4">Total Floors</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalFloors)</dd>
            </dl>
            <div class="btn-group mt-3 w-100" role="group" aria-label="Button group">
                <a role="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                <a role="button" class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

</div>
