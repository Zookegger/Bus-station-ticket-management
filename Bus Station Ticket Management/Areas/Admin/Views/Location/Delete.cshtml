@model Bus_Station_Ticket_Management.Models.Location

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Delete Location</h1>
        </div>

        <div class="card-body">
            <h3 class="card-title">Are you sure you want to delete this?</h3>

            <dl class="row my-4">
                <dt class="col-sm-3 mb-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9 mb-3">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Address)
                </dd>
            </dl>

            <form asp-action="Delete" class="d-flex justify-content-between" role="group">
                <input type="hidden" asp-for="Id" />
                <a role="button" class="btn btn-outline-secondary rounded-2" asp-action="Index">Back to List</a>
                <input type="submit" value="Delete" class="btn btn-danger rounded-2" />
            </form>
        </div>
    </div>
</div>