@model Bus_Station_Ticket_Management.Models.Location
<div class="card-body flex-1" id="locationDetailsContent">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-subtitle mb-2 text-muted"><i class="fa-solid fa-location-dot me-2"></i>@Html.DisplayFor(model => model.Name)</h4>
                    <p class="card-text fs-xs-3 fs-sm-4 fs-md-4 fs-lg-6">
                        @Html.DisplayFor(model => model.Address)
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row my-4">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted fs-5 fw-bold"><i class="fa-solid fa-location-crosshairs me-2"></i>Latitude</h6>
                    <p class="card-text fs-xs-3 fs-sm-4 fs-md-4 fs-lg-6">
                        @Html.DisplayFor(model => model.Latitude)
                    </p>
                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted fs-5 fw-bold"><i class="fa-solid fa-location-crosshairs me-2"></i>Longitude</h6>
                    <p class="card-text fs-xs-3 fs-sm-4 fs-md-4 fs-lg-6">
                        @Html.DisplayFor(model => model.Longitude)
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-lg mb-2 mb-3">
        <div class="card-header text-muted fs-5 fw-bold">
            <i class="fa-solid fa-map-location-dot fa-lg me-1"></i> 
            Route Map
        </div>
        <div class="card-body px-0 py-0">
            <div id="map" style="min-height: 400px;" class="rounded h-100 w-100"></div>
        </div>
    </div>
</div>


<div class="card-footer form-group d-flex justify-content-between" role="group" aria-label="Button group">
    <a role="button" class="btn btn-lg btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">
        <i class="fas fa-edit"></i> Edit Vehicle
    </a>
    <a role="button" class="btn btn-lg btn-secondary" data-bs-dismiss="offcanvas" aria-label="Close">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div id="locationDetailsData" data-name="@Model?.Name" data-latitude="@Model?.Latitude"
    data-longitude="@Model?.Longitude">
</div>