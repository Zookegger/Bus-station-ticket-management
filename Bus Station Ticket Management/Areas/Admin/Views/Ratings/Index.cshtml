@model IEnumerable<Bus_Station_Ticket_Management.Models.Rating>

@{
    ViewData["Title"] = "Danh sách đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Rating List</h2>

<table id="RatingTable" class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Trip</th>
            <th>Trip Date</th>
            <th>User</th>
            <th>Rating</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody class="table-group=divider">
        @foreach (var rating in Model)
        {
            <tr class="clickable-row" data-href="@Url.Action("Details", new { id = rating.Id })">
                <td>@rating.Trip.Route.StartLocation.Name → @rating.Trip.Route.DestinationLocation.Name</td>
                <td>@rating.Trip.ArrivalTime - @rating.Trip.DepartureTime</td>
                <td>@rating.User.UserName</td>
                <td>@rating.TripRating</td>
                <td class="btn-group">
                    <a href="@Url.Action("Edit", new { id = rating.Id })" class="btn btn-secondary">Sửa</a>
                    <a href="@Url.Action("Delete", new { id = rating.Id })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/js/table.js"></script>
}