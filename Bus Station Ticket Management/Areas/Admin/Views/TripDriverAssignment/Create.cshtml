@model Bus_Station_Ticket_Management.Models.TripDriverAssignment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>TripDriverAssignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="TripId" class="control-label">Trip</label>
                <select asp-for="TripId" class ="form-control" asp-items="ViewBag.TripId"></select>
            </div>
            <!-- Driver Assigment -->
            <div class="form-group mb-3">
                <label asp-for="DriverId" class="control-label">Driver</label>
                <select asp-for="DriverId" class ="form-control" asp-items="ViewBag.DriverId"></select>
            </div>
            <div class="form-group btn-group gap-1 mb-3" role="group" aria-label="Button">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-outline-secondary" role="button" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
