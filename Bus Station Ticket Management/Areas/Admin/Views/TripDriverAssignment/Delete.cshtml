@model Bus_Station_Ticket_Management.Models.TripDriverAssignment

@{
    ViewData["Title"] = "Delete Trip Driver Assignment";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-trash-alt me-2"></i>Delete Trip Driver Assignment
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Are you sure you want to delete this trip driver assignment? This action cannot be undone.
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th class="bg-light" style="width: 200px;">@Html.DisplayNameFor(model => model.Trip)
                                    </th>
                                    <td>@Html.DisplayFor(model => model.Trip.Id)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">@Html.DisplayNameFor(model => model.Driver.Account.FullName)
                                    </th>
                                    <td>@Html.DisplayFor(model => model.Driver.Account.FullName)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">@Html.DisplayNameFor(model => model.DateAssigned)</th>
                                    <td>@Html.DisplayFor(model => model.DateAssigned)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="card-footer bg-light d-flex justify-content-between gap-2 py-3">
                    <a role="button" class="btn btn-outline-secondary hvr-icon-back" asp-action="Index">
                        <i class="fas fa-arrow-left me-2 hvr-icon"></i>Back to List
                    </a>
                    <button type="button" class="btn btn-danger hvr-icon-pulse-grow" data-bs-toggle="modal"
                        data-bs-target="#deleteConfirmationModal">
                        <i class="fas fa-trash-alt me-2 hvr-icon"></i>Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <form asp-action="Delete" id="deleteForm">
                <input type="hidden" asp-for="Id" />
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0">Are you sure you want to delete this trip driver assignment? This action cannot be
                        undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary hvr-icon-back" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2 hvr-icon"></i>Cancel
                    </button>
                    <button type="button" class="btn btn-danger hvr-icon-pulse-grow"
                        onclick="document.getElementById('deleteForm').submit();">
                        <i class="fas fa-trash-alt me-2 hvr-icon"></i>Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/Shared/confirmDeleteModal.css">

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>

    <script src="~/js/modalBackdropFix.js"></script>
}