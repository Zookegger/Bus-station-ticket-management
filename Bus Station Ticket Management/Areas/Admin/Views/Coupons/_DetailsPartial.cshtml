@model Bus_Station_Ticket_Management.Models.Coupon

<div class="card-body flex-1" id="tripDetailsContent">

    <div class="row">
        <div class="card">
            <div class="card-body">
                <h6 class="card-subtitle mb-3 text-muted">
                    Coupon Code: @Model.CouponString
                </h6>
                <div class="row w-100 flex-1">
                    <div class="row mb-3">
                        <div class="col-5">
                            <i class="fas fa-calendar-alt me-2"></i>
                            Start Period: @(Model.StartPeriod.Value.ToString("dd/MM/yyyy HH:mm:ss") ?? "N/A")
                        </div>
                        <div class="col-2 text-center align-self-center">
                            <i class="fas fa-arrow-right mx-2 text-muted"></i>
                        </div>
                        <div class="col-5">
                            <i class="fas fa-calendar-alt me-2"></i>
                            Expiration Date: @(Model.EndPeriod.Value.ToString("dd/MM/yyyy HH:mm:ss") ?? "N/A")
                        </div>
                    </div>
                </div>
                <div class="row w-100 flex-1">
                    <div class="col-6">
                        <i class="fas fa-percentage me-2"></i>
                        Discount Type: @Html.DisplayFor(model => model.DiscountType)
                    </div>
                    @if (Model.DiscountType == Bus_Station_Ticket_Management.Models.DiscountType.Percentage)
                    {
                        <div class="col-6">
                            <i class="fas fa-percentage me-2"></i>
                            Discount Percentage: @Model.DiscountAmount%
                        </div>
                    }
                    else
                    {
                        <div class="col-6">
                            <i class="fas fa-money-bill me-2"></i>
                            Discount Amount: @Model.DiscountAmount.ToString("N0") VND
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card-footer form-group d-flex justify-content-between mt-3" role="group" aria-label="Button group">
    <a role="button" class="btn btn-lg btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">
        <i class="fas fa-edit"></i> Edit Coupon
    </a>
    <a role="button" class="btn btn-lg btn-secondary" data-bs-dismiss="offcanvas" aria-label="Close">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>