@model Bus_Station_Ticket_Management.Models.Routes
<div id="routeDetailsContent">
    <div class="row">
        <dt class="col-sm-12 fs-xs-4 fs-sm-4 fs-md-5">
            Starting Point
        </dt>
        <dd class="col-sm-12 fs-xs-4 fs-sm-4 fs-md-5">
            (@Model.StartLocation.Latitude , @Model.StartLocation.Longitude)
        </dd>
        <dd class="col-sm-12 fs-xs-4 fs-sm-4 fs-md-5" id="startAddress">

        </dd>
        <dt class="col-sm-12 fs-xs-4 fs-sm-4 fs-md-5">
            Ending Point
        </dt>
        <dd class="col-sm-12 fs-xs-4 fs-sm-4 fs-md-5">
            (@Model.DestinationLocation.Latitude , @Model.DestinationLocation.Longitude)
        </dd>
        <dd class="col-sm-12 fs-xs-4 fs-sm-4 fs-md-5" id="endAddress">

        </dd>

        <div id="map" style="height: 400px; width: 100%; margin-bottom: 20px;"></div>

    </div>
    <div id="routeDetailsData"
        data-start-name="@Model?.StartLocation.Name"
        data-start-latitude="@Model?.StartLocation.Latitude"
        data-start-longitude="@Model?.StartLocation.Longitude"
        data-end-name="@Model?.DestinationLocation.Name"
        data-end-latitude="@Model?.DestinationLocation.Latitude"
        data-end-longitude="@Model?.DestinationLocation.Longitude">
    </div>
    <div class="card-footer form-group d-flex justify-content-between mt-4" role="group" aria-label="Button group">
        <a role="button" class="btn btn-primary btn-lg" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    </div>
</div>
