        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartLocation.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DestinationId)
        </dt>
        <dd class = "col-sm-10">
