@model Bus_Station_Ticket_Management.Models.Vehicle

@{
    ViewData["Title"] = "Create Vehicle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1 class="text-success fw-bold mb-4">Create Vehicle</h1>
    <h4 class="mb-3">Vehicle Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-9 col-lg-12 mx-auto">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Vehicle Type (Dropdown in form-floating wrapper) -->
                <div class="form-group mb-3">
                    <label asp-for="VehicleTypeId">Select a vehicle type</label>
                    <select asp-for="VehicleTypeId" class="form-select form-control-sm route-select" asp-items="ViewBag.VehicleTypeId" required>
                        <option value="" disabled selected>Vehicle Type</option>
                    </select>
                    <span asp-validation-for="VehicleTypeId" class="text-danger small d-block mb-2 ms-1"></span>
                </div>
                <!-- Vehicle Name -->
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Enter vehicle name..." />
                    <label asp-for="Name">Vehicle Name</label>
                    <span asp-validation-for="Name" class="text-danger small d-block mb-2 ms-1"></span>
                </div>

                <!-- License Plate -->
                <div class="form-floating mb-3">
                    <input asp-for="LicensePlate" class="form-control" placeholder="e.g., 5353-EJKS" />
                    <label asp-for="LicensePlate">License Plate</label>
                    <span asp-validation-for="LicensePlate" class="text-danger small d-block mb-2 ms-1"></span>
                </div>

                <!-- Hidden Status -->
                <input type="hidden" asp-for="Status" value="Stand-By" />

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <a role="button" class="btn btn-outline-secondary" asp-action="Index">
                        <i class="fa fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
