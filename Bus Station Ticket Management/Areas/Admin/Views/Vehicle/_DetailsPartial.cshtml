@model Bus_Station_Ticket_Management.Models.Vehicle

@{
    string statusClass = Model.Status switch
    {
        "Standby" => "warning",
        "Busy" => "info",
        "Repairing" => "danger",
        "Maintainance" => "secondary",
        _ => "secondary"
    };
}
<style>
    .card-body .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card-body .card:hover {
        transform: translateY(-5px);
    }
</style>

<div class="card-body flex-1">
    <div class="row mb-4 gap-sm-3 gap-md-0">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">
                        <i class="fa-solid fa-bus me-2"></i>Vehicle Information
                    </h6>
                    <p class="card-text fs-5">
                        <strong>Name:</strong><br>@Model.Name
                    </p>
                    <p class="card-text fs-5">
                        <strong>Vehicle Type:</strong><br>@Model.VehicleType.Name
                    </p>
                    <p class="card-text fs-5">
                        <strong>License Plate:</strong><br>@Model.LicensePlate
                    </p>
                    <p class="card-text fs-5">
                        <strong>Seat Capacity:</strong><br>@Model.VehicleType.TotalSeats
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">
                        <i class="fa-solid fa-calendar-check me-2"></i>Status Information
                    </h6>
                    <p class="card-text fs-5">
                        <strong>Status:</strong><br>
                        <span class="badge bg-@statusClass">@Model.Status</span>
                    </p>
                    <p class="card-text fs-5">
                        <strong>Acquired Date:</strong><br>@Model.AcquiredDate.ToString("MM/dd/yyyy")
                    </p>
                    <p class="card-text fs-5">
                        <strong>Last Updated:</strong><br>@(Model.LastUpdated != null ? Model.LastUpdated : "N/A")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card-footer form-group d-flex justify-content-between" role="group" aria-label="Button group">
    <a role="button" class="btn btn-lg btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">
        <i class="fas fa-edit"></i> Edit Vehicle
    </a>
    <a role="button" class="btn btn-lg btn-secondary" data-bs-dismiss="offcanvas" aria-label="Close">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

