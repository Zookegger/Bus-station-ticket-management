@section Scripts {
    <script>
        function checkDatabaseConnection() {
            $('#databaseStatus').addClass('bg-secondary').removeClass('bg-success').removeClass('bg-danger');
            $('#databaseStatus').html("<span class='spinner-border spinner-border-sm me-2' role='status' aria-hidden='true'></span>Loading...");

            $.ajax({
                url: '/admin/api/system/check-database-connection',
                type: 'GET',
                success: function (response) {
                    $('#databaseStatus').removeClass('bg-secondary');
                    $('#databaseStatus').addClass('bg-success');
                    $('#databaseStatus').html("Connected");
                },
                error: function (xhr, status, error) {
                    $('#databaseStatus').removeClass('bg-secondary');
                    $('#databaseStatus').addClass('bg-danger');
                    $('#databaseStatus').html("Down");
                }
            });
        }

        function checkApiConnection() {
            $('#apiServerStatus').addClass('bg-secondary').removeClass('bg-success').removeClass('bg-danger');
            $('#apiServerStatus').html("<span class='spinner-border spinner-border-sm me-2' role='status' aria-hidden='true'></span>Loading...");

            $.ajax({
                url: '/admin/api/system/check-api-connection',
                type: 'GET',
                success: function (response) {
                    $('#apiServerStatus').removeClass('bg-secondary');
                    $('#apiServerStatus').addClass('bg-success');
                    $('#apiServerStatus').html("Connected");
                },
                error: function (xhr, status, error) {
                    $('#apiServerStatus').removeClass('bg-secondary');
                    $('#apiServerStatus').addClass('bg-danger');
                    $('#apiServerStatus').html("Down");
                }
            });
        }

        $(document).ready(function () {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Enhanced search functionality
            $('#searchInput').on('keyup', function () {
                var searchValue = $(this).val().toLowerCase();
                if (searchValue === '') {
                    $('.grid-container .card').show();
                    $('.card[id$="Card"]').show();
                    return;
                }

                // Hide/show cards based on search
                $('.grid-container .card').each(function () {
                    var cardTitle = $(this).find('.card-title').text().toLowerCase();
                    var cardText = $(this).find('.card-text').text().toLowerCase();

                    if (cardTitle.includes(searchValue) || cardText.includes(searchValue)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });

                // Hide section headers if all cards in that section are hidden
                $('.card[id$="Card"]').each(function () {
                    var visibleCards = $(this).find('.grid-container .card:visible').length;
                    $(this).toggle(visibleCards > 0);
                });
            });

            checkDatabaseConnection();
            checkApiConnection();

            setInterval(function() {
                checkDatabaseConnection();
                checkApiConnection();
            }, 30000); // Check every 30 seconds
        });
    </script>
}