<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bus Station Ticket Management - Admin</title>

    <!-- Site & Shared Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Shared/_Layout.cshtml.css" asp-append-version="true" />

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Select2 -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
</head>

<body>
    <!-- Header -->
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg bg-success bg-gradient navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand fw-semibold" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                    <i class="fa-solid fa-bus me-2"></i>Bus Station Admin
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar"
                    aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="adminNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Home -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">Home</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Tickets" asp-action="Revenue">Revenue</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="GoToUserHome">User Home</a></li>
                            </ul>
                        </li>
                        <!-- Vehicle -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">Vehicle</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Vehicle" asp-action="Index">Vehicles</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="VehicleType" asp-action="Index">Vehicle Types</a></li>
                            </ul>
                        </li>
                        <!-- Trip -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">Trip</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Location" asp-action="Index">Locations</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Route" asp-action="Index">Routes</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Trip" asp-action="Index">Trips</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Driver" asp-action="Index">Drivers</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="TripDriverAssignment" asp-action="Index">Trip Assignments</a></li>
                            </ul>
                        </li>
                        <!-- User -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">User</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="ApplicationUser" asp-action="Index">Application Users</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Ratings" asp-action="Index">Ratings</a></li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><partial name="_LoginPartial" /></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="main-container bg-light">
        <main role="main" class="container py-4">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer bg-success bg-gradient text-white mt-auto border-top shadow-sm">
        <div class="container py-4">
            <div class="row align-items-center gy-3 text-center text-md-start">
                <!-- Left side -->
                <div class="col-md-6">
                    <div class="small">
                        &copy; 2025 <strong>Bus Station Ticket Management</strong><br />
                        All rights reserved.
                        <a asp-area="" asp-controller="Home" asp-action="Privacy"
                            class="text-white text-decoration-underline ms-1">Privacy Policy</a>
                    </div>
                </div>

                <!-- Right side -->
                <div class="col-md-6 d-flex justify-content-center justify-content-end gap-4">
                    <a href="#" class="text-white text-decoration-none d-inline-flex align-items-center gap-2">
                        <i class="fab fa-facebook d-inline-flex justify-content-end fa-lg"></i><span class="d-none d-sm-inline">Facebook</span>
                    </a>
                    <a href="#" class="text-white text-decoration-none d-inline-flex align-items-center gap-2">
                        <i class="fab fa-linkedin d-inline-flex justify-content-end fa-lg"></i><span class="d-none d-sm-inline">LinkedIn</span>
                    </a>
                    <a href="mailto:support@example.com"
                        class="text-white text-decoration-none d-inline-flex align-items-center gap-2">
                        <i class="fas fa-envelope d-inline-flex justify-content-end fa-lg"></i><span class="d-none d-sm-inline">Email</span>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
